@page
@model QuarantineSystem1.Pages.PersonList.EditModel



<br />
<h2 class="text-info">Edit person</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="Person.Id"/>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Person.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Person.Name" class="from-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Person.Address"></label>
            </div>
            <div class="col-6">
                <input asp-for="Person.Address" class="from-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Person.Barcode"></label>
            </div>
            <div class="col-6">
                <input asp-for="Person.Barcode" class="from-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>

            <div class="col-2">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>

    </form>
</div>
@section Scripts
{

    <partial name="_ValidationScriptsPartial" />


}

